/**
 * Obtiene un par√°metro de la URL por su nombre
 */
function getIdFromUrl(paramName) {
    const urlParams = new URLSearchParams(window.location.search);
    return parseInt(urlParams.get(paramName));
}

/**
 * Muestra un error en el contenedor especificado
 */
function showAppError(selector, message) {
    const container = document.querySelector(selector);
    if (container) {
        container.innerHTML = `
            <div style="text-align: center; padding: 50px; color: #ff9800;">
                <h2>‚ö†Ô∏è Error</h2>
                <p>${message}</p>
                <a href="index.html" style="color: #ffc107; text-decoration: none;">üè† Volver al Inicio</a>
            </div>
        `;
    }
}

/**
 * Obtiene el logo del equipo
 */
function getTeamLogo(teamName) {
    // Implementaci√≥n b√°sica usando service de avatares
    return `https://ui-avatars.com/api/?name=${encodeURIComponent(teamName)}&background=ffd700&color=1a1a2e&size=120`;
}

/**
 * Formatea n√∫meros con separadores de miles
 */
function formatNumber(num) {
    return new Intl.NumberFormat('es-ES').format(num);
}

/**
 * Valida si un email es v√°lido
 */
function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}

